<Window x:Class="MBlog.Forms.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="MainForm" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <MenuItem Name="FileMenuItem" Header="File">
                <MenuItem Name="NewPostMenuItem" Header="New post" ToolTip="New blog post..." Click="NewPostMenuItem_Click" />
                <MenuItem Name="OpenPostMenuItem" Header="Open..." ToolTip="Open a blog post..." Click="OpenPostMenuItem_Click" />
                <MenuItem Name="SaveAsFileMenuItem" Header="Save as file..." ToolTip="Save as file..." Click="SaveAsFileMenuItem_Click" />
                <Separator />
                <MenuItem Name="ExitAppMenuItem" Header="Exit" ToolTip="Exit to Desktop" Click="ExitAppMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="MenuItem" />
        </Menu>
        <avalonedit:TextEditor Name="AvalonTextEditor" FontFamily="Consolas" SyntaxHighlighting="MarkDown"
                               FontSize="10pt"
                               Grid.Row="1" Grid.Column="0" TextChanged="TextEditor_TextChanged" />
        <WebBrowser Name="PreviewWebBrowser" Grid.Row="1" Grid.Column="1" />
        <StatusBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
            </Grid>
            <StatusBarItem HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0">
                <TextBlock Name="TooltipTextBlock" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" Grid.Column="1" Grid.Row="0">
                <TextBlock Name="StatusTextBlock" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>